{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "ES2022"
        ],
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": "./server/src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "server/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "client",
        "dist"
    ]
}